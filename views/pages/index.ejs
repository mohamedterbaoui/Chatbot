<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/main.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>AI Chatbot</title>
  </head>
  <body class="bg-dark text-light">
    <div class="container mt-5">
      <!-- Navigation Tabs -->
      <ul class="nav nav-tabs bg-dark text-light" id="modelTabs" role="tablist">
        <li class="nav-item" role="presentation">
          <a
            class="nav-link active"
            id="model1-tab"
            data-bs-toggle="tab"
            href="#model1"
            role="tab"
            aria-controls="model1"
            aria-selected="true"
            >Model 1</a
          >
        </li>
        <li class="nav-item" role="presentation">
          <a
            class="nav-link"
            id="model2-tab"
            data-bs-toggle="tab"
            href="#model2"
            role="tab"
            aria-controls="model2"
            aria-selected="false"
            >Model 2</a
          >
        </li>
      </ul>

      <!-- Credit Section -->
      <h4 class="credits">
        This model is powered by
        <a
          href="https://huggingface.co/mistralai/Mistral-7B-Instruct-v0.3"
          target="_blank"
          class="text-info"
          >Mistral-7B-Instruct-v0.3</a
        >
        from Hugging Face.
      </h4>

      <!-- Tab Content -->
      <div class="tab-content mt-4">
        <!-- Model 1 Tab -->
        <div
          class="tab-pane fade show active"
          id="model1"
          role="tabpanel"
          aria-labelledby="model1-tab"
        >
          <h3 class="text-center text-light">Chat with Model 1</h3>
        </div>

        <!-- Model 2 Tab -->
        <div
          class="tab-pane fade"
          id="model2"
          role="tabpanel"
          aria-labelledby="model2-tab"
        >
          <h3 class="text-center text-light">Chat with Model 2</h3>
        </div>
      </div>

      <div class="chatAndInput">
        <!-- Chat Screen -->
        <div
          id="chatContainer"
          class="border p-4 mt-4"
          style="height: 400px; overflow-y: scroll; background-color: #333"
        >
          <!-- Chat history will be displayed here -->
        </div>

        <!-- Input and Send Button -->
        <div class="input-group mt-3">
          <input
            id="textbox"
            type="text"
            class="form-control"
            placeholder="Type your message..."
            style="background-color: #555; color: white"
          />
          <button id="sendBtn" type="button" class="btn btn-primary">
            Send
          </button>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS and Custom Script -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="./js/script.js"></script>
  </body>
</html>
